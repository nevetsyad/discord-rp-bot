# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_bot_client_id_here
GUILD_ID=your_server_id_here

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=discord_rp_bot
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Bot Settings
PREFIX=!
DEFAULT_COLOR=5814783
MAX_CHARACTERS_PER_USER=5
MAX_DICE_ROLLS=10

# Security
# Required in production for JWT auth middleware (32+ chars)
JWT_SECRET=replace_with_a_long_random_secret

# DB schema strategy:
# - migrate (recommended for production)
# - safe (sequelize.sync without alter/force)
# - alter (development only)
# - force (test/dev only, destructive)
DB_SCHEMA_STRATEGY=migrate
ALLOW_DB_SYNC=false