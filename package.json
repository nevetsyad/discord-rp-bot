{
  "name": "discord-rp-bot",
  "version": "1.0.0",
  "description": "A Discord Shadowrun 3rd Edition Roleplay Game Master Bot with character creation, combat system, dice rolling, and scene management",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "setup": "node setup.js",
    "setup:interactive": "node setup-interactive.js",
    "setup:mysql": "node setup-interactive-mysql.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level moderate",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "echo 'No build step required'",
    "migration:create": "sequelize-cli migration:generate --name",
    "migration:run": "sequelize-cli db:migrate",
    "migration:rollback": "sequelize-cli db:migrate:undo"
  },
  "keywords": [
    "discord",
    "roleplay",
    "bot",
    "rpg",
    "shadowrun",
    "shadowrun3",
    "shadowrun-3rd-edition",
    "tabletop-rpg",
    "gm-bot",
    "game-master"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "discord.js": "^13.17.1",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsdom": "^22.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.3",
    "node-cache": "^5.1.2",
    "prom-client": "^14.2.0",
    "redis": "^4.6.7",
    "sequelize": "^6.35.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
